{% set title = meta.title|default('meta.title'|trans) %}
{% set description = meta.description|default('meta.description'|trans) %}
{% set url = url|default(absPath(currentUrl)) %}
{% set image = meta.image|default(absPath('assets/img/media-image.jpg')) %}
{% set twitterSite = meta.twitter.site|default('meta.twitter.site'|trans) %}

<meta name="title" content="{{ 'meta.title'|trans }}" />
<meta name="application-name" content="{{ 'meta.title'|trans }}" />
<meta name="description" content="{{ 'meta.description'|trans }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ 'meta.url'|trans }}" />
<meta property="og:title" content="{{ 'meta.title'|trans }}" />
<meta property="og:description" content="{{ 'meta.description'|trans }}" />
<meta property="og:image" content="{{ 'meta.image'|trans }}" />
<meta property="og:site_name" content="{{ 'meta.title'|trans }}" />
<meta name="twitter:card" content="summary" />
<meta name="twitter:title" content="{{ 'meta.title'|trans }}" />
<meta name="twitter:description" content="{{ description|truncate(200) }}"/>
<meta name="twitter:image" content="{{ 'meta.twitterImage'|trans }}" />
<meta name="twitter:url" content="{{ 'meta.url'|trans }}" />
{% if twitterSite %}
    <meta name="twitter:site" content="{{ twitterSite }}" />
{% endif %}
{% if twitterCreator %}
    <meta name="twitter:creator" content="{{ 'meta.twitter.creator'|trans }}"/>
{% endif %}
<link rel="canonical" href="{{ 'meta.url'|trans }}">
