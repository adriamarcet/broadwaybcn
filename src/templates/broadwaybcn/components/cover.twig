<header class="cover u-flex">
    <div class="cover__content u-flex">
        <h1 class="title1 u-align-center">{{ title|raw }}</h1>
        <p class="title2 u-align-center">{{ description }}</p>
    </div>

    {% set slides = slides|default([]) %}
    {% for i in 1..3 %}
        {% set slideTitle = 'cover_slider.slide_' ~ i ~ '.title' %}
        {% set slideDescription = 'cover_slider.slide_' ~ i ~ '.description' %}

        {% set slides = slides|merge([
            {
                title: slideTitle|trans,
                description: slideDescription|trans,
                picture: {
                    path: '/assets/img/home_slider/home_slider_' ~ i ~ '_4-3.jpg',
                    attr: 'width="1100" height="620"',
                    sources: [
                        {
                            path: '/assets/img/home_slider/home_slider_' ~ i ~ '_1-1.jpg',
                            attr: 'width="747" height="747"',
                            media: '(min-width: 526px) and (max-width: 812px)',
                            type: 'image/jpg'
                        },
                        {
                            path: '/assets/img/home_slider/home_slider_' ~ i ~ '_16-9.jpg',
                            attr: 'width="1650" height="930"',
                            media: 'min-width: 813px',
                            type: 'image/jpg'
                        }
                    ]
                }
            }
        ]) %}
    {% endfor %}
    {% include 'components/cover-slider.twig' with { component: {
        class: 'js-swiper-container',
        slides: slides
    } } %}
</header>
