{% set class = component.class|default('') %}
{% set slides = component.slides|default([]) %}

<div class="cover-slider swiper js-swiper-cover">
    <div class="swiper-wrapper">
        {% for slide in slides %}
            {% include 'components/cover-slide.twig' with { 
                component: {
                    slide: slide
                }
            } %}
        {% endfor %}
    </div>
    <div class="swiper-pagination js-swiper-pagination u-align-center"></div>
    <div class="swiper-navigation">
        <div class="swiper-button-prev js-swiper-previous js-swiper-disabled" tabindex="0" role="button" aria-label="{{ 'a11y.slider_previous_slide'|trans}}"></div>
        <div class="swiper-button-next js-swiper-next" tabindex="0" role="button" aria-label="{{ 'a11y.slider_next_slide'|trans}}"></div>
    </div>
</div>