{% set slide = component.slide|default({}) %}
{% set class = component.class|default('cover-slider__slide') %}

<div class="cover-slide {{ class }} swiper-slide">
    <div class="cover-slide__image">
        {% include 'components/picture.twig' with {
            component: slide.picture
        } %}
    </div>
    <div class="cover-slide__content">
        <p class="cover-slide__title">{{ slide.title|raw }}</p>
        <p class="cover-slide__description p-small">{{ slide.description|raw }}</p>
    </div>
</div>