{% set class = section.class|default('') %}

<section class="what-we-do {{ class }} padding-top--xxl padding-bottom--xxl theme1">
    <div class="u-wrapper">
        <h2 class="title4 margin-bottom--xl">{{ 'what_we_do.title'|trans }}</h2>
    </div>
    <div class="what-we-do__content u-wrapper">
        <div class="what-we-do__column">
            <p class="title3">{{ 'what_we_do.theatre_title'|trans }}</p>
            <p class="p-big">{{ 'what_we_do.theatre_description'|trans }}</p>
        </div>
        <div class="what-we-do__column">
            <p class="title3">{{ 'what_we_do.interpretation_title'|trans }}</p>
            <p class="p-big">{{ 'what_we_do.interpretation_description'|trans }}</p>
        </div>
        <div class="what-we-do__column">
            <p class="title3">{{ 'what_we_do.dance_title'|trans }}</p>
            <p class="p-big">{{ 'what_we_do.dance_description'|trans }}</p>
        </div>
    </div>
</section>